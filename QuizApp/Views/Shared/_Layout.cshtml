<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Quiz Application</title>
    @Styles.Render("~/Content/admin-css")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Quiz app", "ResultManagement", "Admin", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Tests", "TestManagement", "Admin")</li>
                    <li>@Html.ActionLink("Testing Urls", "TestingUrlManagement", "Admin")</li>
                    <li>@Html.ActionLink("Results", "ResultManagement", "Admin")</li>
                    <li>@Html.ActionLink("CSV", "GetResultsForTestCsv", "Admin")</li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    @*@if (!Request.IsAuthenticated)
                    {
                        <li>@Html.ActionLink("Login", "Login", "Account")</li>
                    }*@
                    @if (Request.IsAuthenticated)
                    {
                        <li>@Html.ActionLink("Logout", "LogOff", "Account")</li>
                    }
                </ul>
            </div>
           
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - QuizApp</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/angular")
    @Scripts.Render("~/bundles/angular-ui")
    @Scripts.Render("~/bundles/common-dep")
    @RenderSection("scripts", required: false)
    <script>
$(document).ready(function () {
            $("script ~ div").css('display', 'none');
            $("center a").css('display', 'none');
        });
    </script>
</body>
</html>
